char    *ft_strcat(char *dest, char *src)
{
    int i;
    int j;

    i = 0;
    j = 0;
   // char combined[20];//
    while (dest[j] != '\0')
    {
        j++;
    }
    
    while (src[i] != '\0')
    {   
      dest[j] = src[i];
        j++;
        i++;
    }
   // src[i] = '\0';   
    dest[j] = '\0';
    return (dest); //dest//
}


#include <stdio.h>

int main()
{
  char src[15] = "world";
  char dest[15] = "hello";
  ft_strcat(dest, src);
  printf("%s", dest);
}
